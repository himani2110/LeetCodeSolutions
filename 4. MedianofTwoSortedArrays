import java.util.*;
class Solution {
    public double findMedianSortedArrays(int[] nums1, int[] nums2) {
        double result = 0;
        int size = nums1.length + nums2.length;
        int arr[] = new int[size];
        for(int i = 0; i < nums1.length; i++){
            arr[i] = nums1[i];
        }
        for(int i = nums1.length, j = 0; i < size && j < nums2.length; i++, j++){
            arr[i] = nums2[j];
        }

        Arrays.sort(arr);
        if(arr.length%2 == 0){
            int n = arr.length/2;
            float temp = arr[n-1] + arr[n]; 
            result = temp/2;
        }
        else{
            int n = (size+1)/2;  
            result = arr[n-1];
        }
        return result;
    }
}
